<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onezerobg"
    tools:context=".LessonTwoP5Fragment">

    <TextView
        android:id="@+id/lesson2_p5_test"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_bg_scoreboardrow"
        android:text="Lesson Test"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView85"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Question 3: What is wrong with the following code? (Advanced)"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lesson2_p5_test" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/lesson_2_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView85" />

    <RadioButton
        android:id="@+id/radioButton16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="A)"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView85"
        app:layout_constraintTop_toBottomOf="@+id/imageView21" />

    <RadioButton
        android:id="@+id/radioButton17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="B)"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/radioButton16"
        app:layout_constraintTop_toBottomOf="@+id/radioButton16" />

    <RadioButton
        android:id="@+id/radioButton18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="C)"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/radioButton17"
        app:layout_constraintTop_toBottomOf="@+id/radioButton17" />

    <RadioButton
        android:id="@+id/radioButton19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="D)"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/radioButton18"
        app:layout_constraintTop_toBottomOf="@+id/radioButton18" />

    <TextView
        android:id="@+id/textView86"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="The variable result is not initialized."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/radioButton16"
        app:layout_constraintStart_toEndOf="@+id/radioButton16"
        app:layout_constraintTop_toTopOf="@+id/radioButton16" />

    <TextView
        android:id="@+id/textView87"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="The division result is stored in an integer variable so we wont get the right answer."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/radioButton17"
        app:layout_constraintStart_toEndOf="@+id/radioButton17"
        app:layout_constraintTop_toTopOf="@+id/radioButton17" />

    <TextView
        android:id="@+id/textView88"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="The printf function format specifier is incorrect."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/radioButton18"
        app:layout_constraintStart_toEndOf="@+id/radioButton18"
        app:layout_constraintTop_toTopOf="@+id/radioButton18" />

    <TextView
        android:id="@+id/textView89"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="The code does not include the necessary header file for using printf."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/radioButton19"
        app:layout_constraintStart_toEndOf="@+id/radioButton19"
        app:layout_constraintTop_toTopOf="@+id/radioButton19"
        app:layout_constraintVertical_bias="0.517" />

    <Button
        android:id="@+id/lesson2_done_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_bg_scoreboardrow"
        android:text="Done"
        app:layout_constraintBottom_toTopOf="@+id/link_click_msg_l2_p5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/link_click_msg_l2_p5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="Click here and try running those questions alone to see how it works!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/lesson2_progressBar_p5"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>